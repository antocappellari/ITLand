
<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head') %> 
  <body>
    <!-- header -->
    <%- include('../partials/header') %> 


    <main class="main__profile">
        <div class="userProfile">
          <div class="userImage">
          <img width="100px" src="/images/users/<%= userToLogged.image %>" alt="">
