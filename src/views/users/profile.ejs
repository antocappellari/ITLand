          <p>Cellphone: <%= userToLogged.cellphone %> </p>
          <hr>
          <p>Email: <%= userToLogged.email %> </p>
        </div>
        <div class="userOrders">
       <div>
        <p>My orders</p>
       </div>
        </div>
    </main>




    <!-- Bootom Nav -->
    <%- include('../partials/bottomNav') %> 
