<header>
    <div class="container-header">
      <a href="#open" class="header__burger">
        <i class="fa-solid fa-bars"></i>
      </a>
      <div id="open" class="menu-mobile">
        <div class="user">
            <% if (locals.isLogged) { %>
              <div class="userImage">
                <img width="100px" src="/images/users/<%= userToLogged.image %>" alt="">
                </div>
            <% } else {%>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-circle user-profile" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
              </svg>
              <% } %>
            <% if (locals.isLogged) { %>
             <p><%= userToLogged.name %></p>
            <% } else{%>
              <p></p>
              <% } %>
            <div class="button-exit">
              <a href="#exit"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
              </svg></a>
          </div>
        </div>
        <nav class="navegation-mobile">
            <ul>
                <li><a href="/">Home</a></li>
                <hr>
                <li><a href="/products">Products</a></li>
                <hr>
                <% if (locals.isLogged) { %>
                  <li><a href="/users/profile/">Profile</a></li>
                  <hr>
                  <li><a href="/users/logout/">Log out</a></li>
                  <hr>
                <% }else{ %>
                    <li><a href="/users/login/">Login</a></li>
                    <hr>
                    <li><a href="/users/register/">Register</a></li>
                    <hr>
                <% } %>
            </ul>
        </nav>
    </div>

      <a href="/" class="title_and_logo">
        <img src="/images/Logo2.png">
        <h1>ITLand</h1>
      </a>
      <div class="main__input" id="search">
        <form>
          <input type="text" placeholder="Search" />
          <i class="fa-solid fa-magnifying-glass"></i>
        </form>
      </div>
      <div class="header__account">

        <% if (locals.isLogged) { %>
          <a class="account__icon" href="/users/profile">
          <img class="headImage" src="/images/users/<%= userToLogged.image %>" alt=""  >
          <p class="nameLogged">
            <%= userToLogged.name %>
          </p>
          <a class="logOut" href="/users/logout/">Log out</a>
        </a>
         
        <% } else { %>
          <a class="account__icon" href="/users/login">
        <i class="fa-solid fa-user"></i>
        <span>Log in</span>
      </a>
         
          <% }%>

      </div>
      <div class="container-header__cart">
        <a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i><span>Cart</span></a>
      </div>
    </div>
    <nav class="navegation">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/products/about">About us</a></li>
        <li><a href="/contactUs"> Contact us</a></li>
      </ul>
   
    </nav>
  </header>