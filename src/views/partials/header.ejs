<header>
  <div class="container-header">
    <div id="btn_burger_menu" class="header__burger">
      <i class="fa-solid fa-bars"></i>
    </div>
    <div  class="menu-mobile" id="menu-mobile">
      <div class="user">
        <% if (locals.isLogged) { %>
          <div class="userImage">
            <img width="100px" src="/images/users/<%= userToLogged.image %>" alt="">
          </div>
          <% } else {%>
          <div class="userImage">
            <img width="100px" src="/images\users\usuarioDefault.png" alt="">
          </div>
          <div>
            <br>
            <a href="/users/login" class="btn btn-login">Log in</a>
            <a href="/users/register" class="btn btn-register">Register</a>
          </div>
            <% } %>
            <% if (locals.isLogged) { %>
              <p>Hello! <span class="user_name"><%= userToLogged.first_name %></span></p>
              <% if (locals.isLogged) { %>
                <div style="margin-top: 20px;">
                  <a href="/users/profile/" class="btn" style="background-color: blueviolet;">Profile</a>
                  <a href="/users/logout/" class="btn" style="background-color: #102860;">Log out</a>
                </div>
                <% } %>
                  
                <% } else{%>
                  <p></p>
                  <% } %>
                    <div class="button-exit" id="button-exit">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                          class="bi bi-x-circle" viewBox="0 0 16 16">
                          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                          <path
                            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </div>
      </div>
      <nav class="navegation-mobile">
        <ul>
          <li><a href="/">Home</a></li>
<!-- is admin -->
          <% if (locals.isAdmin) { %>
            <li><a href="/users">Users</a></li>
            <% } %>
            <li><a href="/products">Products</a></li>
          <li class="mobile_categories">
            <p>Categories</p>
            <ul>
              <li>Smartphones</li>
              <li>Laptops</li>
              <li>Othres</li>
            </ul>
          </li>
          
        </ul>
      </nav>
    </div>
    <a href="/" class="title_and_logo">
      <img src="/images/Logo2.png">
      <h1>ITLand</h1>
    </a>
    <div class="main__input">
      <input type="text" placeholder="Search" id="search" />
      <ul class="results">
      </ul>
      <i class="fa-solid fa-magnifying-glass"></i>
    </div>
    <div class="header__account">
      <% if (locals.isLogged) { %>
        <div class="user_logged">
          <div class="user_logged_user account__icon">
            <% if (locals.isAdmin) { %>
              <div class="crown">
                <i class="fa-solid fa-crown"></i>
              </div>
            <% } %>
            <img class="headImage" src="/images/users/<%= userToLogged.image %>" alt="">
            <p class="nameHeader">
              <%= userToLogged.first_name %>
            </p>
            <div class="icon_down">
              <i class="fa-solid fa-angle-down"></i>
            </div>
          </div>
          <div class="user_option user_option_active" id="user_option">
            <a href="/users/profile/">Profile</a>
            <a href="/users/logout/">Log out</a>
          </div>
        </div>
        <% } else { %>
          <a class="account__icon" href="/users/login">
            <i class="fa-solid fa-user"></i>
            <span>Log in</span>
          </a>
          <% }%>
            <div class="container-header__cart">
              <a href="/products/cart"><i class="uil uil-shopping-cart"></i></a>
            </div>
    </div>
  </div>
  <nav class="navegation">
    <ul>
      <li><a href="/">Home</a></li>
      <% if (locals.isAdmin) { %>
       
        <li><a href="/users">Users</a></li>
      <% } %>
      <li><a href="/products">Products</a></li>
      <li><a href="/products/about">About us</a></li>
      <li><a href="/users/contactUs"> Contact us</a></li>
    </ul>

  </nav>
</header>
<script src="/JS/search.js"></script>
<script src="/JS/header.js"></script>