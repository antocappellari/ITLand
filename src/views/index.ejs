      <h2 class="producTittle">Best deals</h2>
      <section class="CarrusselSection">
        <% products.forEach(product=> { %>
        <article class="best_deals">
          <div class="heart_favorite">
            <i class="fa-regular fa-heart"></i>
          </div>
          <a href="/products/<%= product.id %>/detail" class="FirstOffer">
            <p class="discount"><%= product.discount %>% OFF</p>
            <div class="Imagetext">
              <img
                src="images/products/<%= product.images[0].name %>"
                alt=""
                class="product-image"
              />
            </div>
            <div class="FirstOffer_data">
              <p class="Photo"><%= product.name %></p>
              <p class="Price">$ <%= product.price %></p>
            </div>
            <p class="Delivery">
              <span class="Price">$<%= Math.floor(product.price/10) %></span> x
              10 installments
            </p>
          </a>
          <div class="best_deals_btn">
            <a class="add-cart" href="/products/cart">Add to cart</a>
          </div>
        </article>
        <% }) %>
      </section>

