<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head') %>

  <body>
    <!-- header -->
    <%- include('./partials/header') %>
      <main>
        <div class="swiper2">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
              <img class="carrussel-img" src="/images/carrussel/1.webp" alt="">
            </div>
            <div class="swiper-slide">
              <img class="carrussel-img" src="/images/carrussel/2.webp" alt="">
            </div>
            <div class="swiper-slide">
              <img class="carrussel-img" src="/images/carrussel/3.webp" alt="">
            </div>
            <div class="swiper-slide">
              <img class="carrussel-img" src="/images/carrussel/4.webp" alt="">
            </div>
            <div class="swiper-slide">
              <img class="carrussel-img" src="/images/carrussel/5.webp" alt="">
            </div>
          </div>

        </div>

        <div class="swiper3">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper">
            <!-- Slides -->
            <div class="swiper-slide">
              <img src="/images/carrussel/img1.webp" alt="" />
            </div>
            <div class="swiper-slide">
              <img src="/images/carrussel/img2.webp" alt="" />
            </div>
            <div class="swiper-slide">
              <img src="/images/carrussel/img3.webp" alt="" />
            </div>
            <div class="swiper-slide">
              <img src="/images/carrussel/img4.webp" alt="" />
            </div>
            <div class="swiper-slide">
              <img src="/images/carrussel/img5.webp" alt="" />
            </div>
          </div>
        </div>

        <section class="main_paymentmethods">
          <h2>aca iran los metodos de pago</h2>
        </section>
        <h2 class="producTittle">Best deals</h2>
        <section class="CarrusselSection">
          <% products.forEach(product=> { %>
            <% if (product.sub_categories.name == 'Best deals') { %>
             
              <article class="best_deals article_product">
                <a href="/products/<%= product.id %>/detail" class="FirstOffer">
                  <% if (product.discount == 0) { %>
                    <p></p>
                    <% } else{%>                
                      <p class="discount"> <%= product.discount %> %Off</p>
                    <% } %>                
                  <div class="Imagetext product_image">
                      <img src="images/products/<%= product.images[0].name %>" alt="" class="product-image" />
                  </div>
                    <p class="product_name">
                      <%= product.name %>
                    </p>
                    <p class="product_price">$ <%= product.price %>
                    </p>
                  <p class="Delivery">
                    <span class="product_price">$<%= Math.floor(product.price/10) %></span> x
                    10 installments
                  </p>
                </a>
                <div class="best_deals_btn">
                  <button class="add-cart btn_card"  data-id="<%= product.id %>">Add to cart</button>
                </div>
              </article>
            <% } %>
            <% }) %>
        </section>


        <h2 class="producTittle">offers</h2>
        <!-- Slider main container -->
        <div class="swiper">
          <!-- Additional required wrapper -->
          <div class="swiper-wrapper ">
            <!-- Slides -->
            <% products.forEach(product=> { %>
              <% if (product.sub_categories.name == 'Offers') { %>
               
                <article class="carrussel-art swiper-slide">
                  <a href="/products/<%= product.id %>/detail" class="carrussel_product">
                    <!-- <div class="heart_favorite">
                      <i class="fa-regular fa-heart"></i>
                    </div> -->
                    <p class="discount">
                      <%= product.discount %>% OFF
                    </p>
                    <div class="Imagetext">
                      <img src="images/products/<%= product.images[0].name %>" alt="" class="product-image" />
                    </div>
                      <p class="product_name">
                        <%= product.name %>
                      </p>
                      <p class="product_price">$ <%= product.price %>
                      </p>
                    <p class="Delivery">
                      <span class="Price">$<%= Math.floor(product.price/10) %></span>
                      x 10 installments
                    </p>
                  </a>
                  <div class="best_deals_btn">
                    <button class="add-cart btn_card" data-id= "<%= product.id%>">Add to cart</button>
                  </div>
                 
                </article>
              <% } %> 
              <% }) %>
          </div>

          <!-- If we need navigation buttons -->
          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>

      </main>
      <!-- bottom nav -->
      <%- include('./partials/bottomNav') %>
        <!-- footer -->
        <%- include('./partials/footer') %>
          <script src="/JS/swiper.js" type="module"></script>
          <script src="/JS/cart/cart.js"></script>
          <script src="/JS/cart/handlerLocalStorage.js" ></script>
  </body>

</html>