<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  
  <%- include('../partials/head') %> 
  <body>
    <%- include('../partials/header') %> 

    <main>
      <section class="top-products">
      <div class="titleproducts"><h1 style="color: green;">Products</h1></div>
      <div class="createproduct">
      <% if (locals.isLogged) { %>
        <a href="/products/create"><button type="button" class="btn1"> Create</button></a>
      <% } %>
      </div>
      </section>
      <section class="filter-view">
      <div class="product-search" id="search">
        <form class="searchbar">
          <input type="text" placeholder="Search" />
          <i class="fa-solid fa-magnifying-glass"></i>
        </form>
      </div>
    </section>
    <section style=" background-color: antiquewhite;">
     <% products.forEach(product => { %>
      <p>
        <%= product.name %>
        <%= product.price %>
        <%= product.description %>
      </p>
      <div style="background-color: red;">
        <a href="/products/<%= product.id %>/edit">edit</a>
        <form action="/products/<%= product.id %>/delete?_method=DELETE" method = "post">
        <button type="submit"> DELETE</button>
        </form>

      </div>
     <% }) %>
    </section>
    
    </main>

  <!-- Bottom Nav -->

    <%- include('../partials/bottomNav') %> 

  <!-- Footer -->

    <%- include('../partials/footer') %> 
  </body>
</html>
