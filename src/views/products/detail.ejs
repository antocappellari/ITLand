<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head') %>

    <body>
        <!-- header -->
        <%- include('../partials/header') %>
        <main>
                <figure>
                    <img src="/images/brands/<%= product.brands.image %>" alt="" width="160px">
                </figure>
                    
                <section class="main-container" style="margin-top: 40px;">
                            <div class="swiper-detail">
                                 
                                <div class="swiper-wrapper">
                                    <% product.images.forEach(image=> { %>
                                        <div class="slide-image swiper-slide">
                                            <img src="/images/products/<%= image.name %>" alt="" class="">
                                        </div>
                                        <% }) %>
                                            
                                </div>
                                <div class="swiper-pagination ">
                                    ...
                                </div>
                                <div class="swiper-button-prev"></div>
                                <div class="swiper-button-next"></div>
                            </div>
                    <section class="section__characteristics">
                        <div class="container-charac">
                           
                            <div>
                                <p style="font-weight: 600;"><%= product.name %></p>
                            </div>
                            <div class="characterisrics-memory-color">
                                <div>
                                    <p class="p1">Colors:</p>
                                    <p class="p2">
                                        <%= product.colors.color %>
                                    </p>
                                </div>
                                <i class="fa-solid fa-angle-right"></i>
                            </div>
                        </div>
                        <% if (product.discount == 0) { %>
                            <p></p>
                           <% }else{ %>
                            <p class="previous">
                                <%= product.price %>
                            </p>
                           <% } %>
                        <div class="oferts">
                            <p class="price">$<%= (Math.floor(( product.price - (product.price * product.discount ) /
                                    100))) %>
                            </p>
                            <% if (product.discount == 0) { %>
                             <p></p>
                            <% }else{ %>
                                <p>
                                    <%= product.discount %>%OFF
                                </p>
                            <% } %>
                        </div>
                        <a class="payment-methods" href="#">10 x $<%= Math.floor((Math.floor(( product.price -
                                (product.price * product.discount ) / 100)))/10) %> sin inter√©s</a>
                        <div class="freeshipping">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-truck" viewBox="0 0 16 16">
                                <path
                                    d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                            </svg>
                            <span class="description__freeshipping">Free shipping</span>
                        </div>
                        <div class="freeshipping">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-shop" viewBox="0 0 16 16">
                                <path
                                    d="M2.97 1.35A1 1 0 0 1 3.73 1h8.54a1 1 0 0 1 .76.35l2.609 3.044A1.5 1.5 0 0 1 16 5.37v.255a2.375 2.375 0 0 1-4.25 1.458A2.371 2.371 0 0 1 9.875 8 2.37 2.37 0 0 1 8 7.083 2.37 2.37 0 0 1 6.125 8a2.37 2.37 0 0 1-1.875-.917A2.375 2.375 0 0 1 0 5.625V5.37a1.5 1.5 0 0 1 .361-.976l2.61-3.045zm1.78 4.275a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0 1.375 1.375 0 1 0 2.75 0V5.37a.5.5 0 0 0-.12-.325L12.27 2H3.73L1.12 5.045A.5.5 0 0 0 1 5.37v.255a1.375 1.375 0 0 0 2.75 0 .5.5 0 0 1 1 0zM1.5 8.5A.5.5 0 0 1 2 9v6h1v-5a1 1 0 0 1 1-1h3a1 1 0 0 1 1 1v5h6V9a.5.5 0 0 1 1 0v6h.5a.5.5 0 0 1 0 1H.5a.5.5 0 0 1 0-1H1V9a.5.5 0 0 1 .5-.5zM4 15h3v-5H4v5zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3zm3 0h-2v3h2v-3z" />
                            </svg>
                            <span class="description__freeshipping">Free withdrawal at location points</span>
                        </div>
                        <div class="article-button">
                            <button type="button" class="btn1"> Buy</button>
                            <button class="add-cart btn_card" data-id= "<%= product.id%>">Add to cart</button>
                            <i class="fa-regular fa-heart"></i>
                        </div>
                    </section>
                    <section class="section__description" id="section__description">
                        <div class="description">
                            <h4>Description</h4>
                            <p class="pDes" id="pDes">
                                <%- product.description.replace(/\n/g, `<br>`) %>
                            </p>
                            <div class="btn-description">
                                <button class="btn-seemore" id="btnDes">See more</button>
                            </div>
                        </div>
                        <!-- <div class="description" id="description"> -->
                            <!-- <div class="description-buttons">
                                <% if (locals.isAdmin) { %>
                                    <a href="/products/<%= product.id %>/edit"><button type="button"
                                            class="btn1">Edit</button></a>
                                    <form action="/products/<%= product.id %>/delete?_method=DELETE" method="post">
                                        <input type="submit" class="btn1" value="Delete">
                                    </form>
                                    <% } %>
                            </div> -->
                        <!-- </div> -->
                    </section>
                    
                </section>
            </main>

            <h2 class="producTittle">offers</h2>
            <!-- Slider main container -->
            <div class="swiper">
              <!-- Additional required wrapper -->
              <div class="swiper-wrapper ">
                <!-- Slides -->
                <% products.forEach(product=> { %>
                  <% if (product.sub_categories.name == 'Offers') { %>
                   
                    <article class="carrussel-art swiper-slide">
                      <a href="/products/<%= product.id %>/detail" class="carrussel_product">
                        <!-- <div class="heart_favorite">
                          <i class="fa-regular fa-heart"></i>
                        </div> -->
                        <p class="discount">
                          <%= product.discount %>% OFF
                        </p>
                        <div class="Imagetext">
                          <img src="/images/products/<%= product.images[0].name %>" alt="" class="product-image" />
                        </div>
                          <p class="product_name">
                            <%= product.name %>
                          </p>
                          <p class="product_price">$ <%= product.price %>
                          </p>
                        <p class="Delivery">
                          <span class="Price">$<%= Math.floor(product.price/10) %></span>
                          x 10 installments
                        </p>
                      </a>
                      <div class="best_deals_btn">
                        <a class="add-cart" href="/products/cart">Add to cart</a>
                      </div>
                     
                    </article>
                  <% } %> 
                  <% }) %>
              </div>
    
              <!-- If we need navigation buttons -->
              <div class="swiper-button-prev"></div>
              <div class="swiper-button-next"></div>
            </div>

            <!-- Bottom Nav -->
            <%- include('../partials/bottomNav') %>
                <!-- Footer -->
                <%- include('../partials/footer') %>
                    <script src="/JS/swiper.js" type="module"></script>
                    <script src="/JS/detail.js"></script>
                    <script src="/JS/cart/cart.js"></script>
                    <script src="/JS/cart/handlerLocalStorage.js" ></script>
    </body>

</html>