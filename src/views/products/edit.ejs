
<!DOCTYPE html>
<html lang="en">
<!-- head -->
<%- include('../partials/head') %> 
<body>
  <!-- header -->
  <%- include('../partials/header') %> 
  <main class="main-form">
    <div class="container-form">
    <h2 class="form-title">Article edit:</h2>

    <!-- <--------FORMULARIO--------->

    <form class="form-inputs" action="/products/<%= id %>/edit?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="userinput">
        <input type="name"  name="name" placeholder="Product Name">
      </div>
      <div class="userinput">
       <textarea name="description" id="" cols="30" rows="10"></textarea>
      </div>
      <div class="file-select" id="src-file1" >
        <input type="file" name="image"  multiple >
      </div>
        <div class="userinput">
        <input type="text" name="category" placeholder="Product Category">
      </div>
      <div class="userinput">
        <input type="text" name="subcategory" placeholder="Product Subcategory">
      </div>
      <div class="userinput">
        <input type="text" name="brand" placeholder="Product Brand">
      </div>
        <select class="drop-down"name="color">
            <option value="black">Choose color</option>
            <option value="white">black</option>
            <option value="white">white</option>
            <option value="grey">grey</option>
            <option value="midnightBlue">midnight blue</option>
            <option value="gold">gold</option>
            <option value="silver">silver</option>
            <option value="pink">pink</option>
            <option value="green">green</option>
        </select>
        <div class="userinput">
        <input type="number" name="memory" placeholder="Product Memory">
      </div>
      <div class="userinput">
        <input type="number" name="height" placeholder="Product height">
      </div>
      <div class="userinput">
        <input type="number" name="length" placeholder="Product length">
      </div>
      <div class="userinput">
        <input type="number" name="width" placeholder="Product width">
      </div>
      <div class="userinput">
        <input type="number" name="price" placeholder="Product Price">
      </div>
      <div class="userinput">
        <input type="number" name="discount" placeholder="Product Discount">
      </div>
      <div class="button-create-product">
      <div class="userinput button-submit">
        <input class="input-button" type="Submit" value="Editar">
      </div>
      <div class="userinput button-submit">
        <input class="input-button" type="Submit" value="Reset">
      </div>
    </div>
    </form>
  </div>
  </main>
</body>
</html>
